{
  "name": "cssweng-project",
  "version": "1.0.0",
  "description": "Case Management System",
  "scripts": {
    "start:backend": "cd backend/src && npm run dev-server",
    "start:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "install:all": "cd backend/src && npm install && cd ../../frontend && npm install",
